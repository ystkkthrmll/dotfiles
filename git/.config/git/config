[user]
    [includeIf "gitdir:~/Dropbox/dotfiles/"]
        path = ~/.config/git/config.personal

    [includeIf "gitdir:~/Dropbox/notes/"]
        path = ~/.config/git/config.personal

    [includeIf "gitdir:~/my-docs/"]
        path = ~/.config/git/config.personal

    [includeIf "gitdir:~/projects/"]
        path = ~/.config/git/config.work

[alias]
    # - Refs
    #   - [2.7 Git Basics - Git Aliases](https://git-scm.com/book/en/v2/Git-Basics-Git-Aliases)
    br = branch
    ci = commit
    co = checkout
    st = status

[color "status"]
    # - Refs
    #   - [How to colorize output of git?](https://unix.stackexchange.com/questions/44266/how-to-colorize-output-of-git)
    added = cyan
    changed = green bold
    untracked = red bold

[commit]
    # - Refs
    #   - [Using Git Commit Message Templates to Write Better Commit Messages](https://gist.github.com/lisawolderiksen/a7b99d94c92c6671181611be1641c733#template-file)
    template = ~/.config/git/message

[core]
    # - Refs
    #   - `$ git config --global core.excludesfile ~/.gitignore_global`
    #     - [Git - gitignore Documentation](https://git-scm.com/docs/gitignore#_description#:~:text=Patterns%20which%20a%20user%20wants%20Git%20to%20ignore%20in%20all%20situations)
    #     - [参照先](https://help.github.com/en/github/using-git/ignoring-files#create-a-global-gitignore0)
    #   - `$ git config --global core.editor nvim`
    #     - cf. "Pro Git"
    excludesfile = ~/.config/git/ignore
    editor = nvim

[credential]
    # - Refs
    #   - `$ git config --global credential.helper store`
    helper = store
